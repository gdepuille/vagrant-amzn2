#cloud-config
users:
  - default
  - name: vagrant
    groups: wheel
    sudo:
      - 'ALL=(ALL) NOPASSWD:ALL'
    plain_text_passwd: vagrant
    ssh-authorized-keys:
      - ssh-rsa  vagrant insecure public key
    lock_passwd: false

chpasswd:
  list: |
    root:vagrant
    ec2-user:vagrant
  expire: false

# Install packages
packages:
  # Keymap FR
  - system-config-keyboard

runcmd:
  # Stop cloud-init from randomizing root password on startup
  - sed -i 's/.*root:RANDOM/#&/g' /etc/cloud/cloud.cfg.d/99_onprem.cfg

  # Definition de la Timezone
  - ln -fs /usr/share/zoneinfo/Europe/Paris /etc/localtime

  # Change keymap to french
  - system-config-keyboard --noui fr
